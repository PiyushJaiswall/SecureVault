<UserControl x:Class="SecureVault.Views.MediaViewerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="800" Height="600"
             Background="Transparent">
    <Border Background="#EE000000" CornerRadius="8" BorderBrush="#333" BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar with Close Button -->
            <Border Grid.Row="0" Background="#333" CornerRadius="8,8,0,0" Padding="15,10">
                <Grid>
                    <TextBlock Text="Media Viewer" FontSize="16" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    <Button Content="✕" 
                            HorizontalAlignment="Right" 
                            Command="{Binding CloseCommand}"
                            Background="#CC0000"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="10,5"
                            FontSize="16"
                            FontWeight="Bold"
                            Cursor="Hand"
                            ToolTip="Close">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#CC0000"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="4" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF0000"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Media Display Area -->
            <Grid Grid.Row="1" Margin="20">
                <!-- Image Viewer -->
                <Image x:Name="ImageViewer" 
                       Source="{Binding ImageSource}"
                       Stretch="Uniform"
                       Visibility="{Binding IsImageVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <!-- Media Player -->
                <MediaElement x:Name="MediaPlayer" 
                              Source="{Binding MediaUri}" 
                              LoadedBehavior="Manual"
                              Stretch="Uniform"
                              Visibility="{Binding IsMediaVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>

            <!-- Media Controls (for videos/audio) -->
            <Border Grid.Row="2" 
                    Background="#222" 
                    CornerRadius="0,0,8,8" 
                    Padding="15,10"
                    Visibility="{Binding IsMediaVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="▶ Play" Command="{Binding PlayCommand}" Margin="5" Padding="10,5" Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                    <Button Content="⏸ Pause" Command="{Binding PauseCommand}" Margin="5" Padding="10,5" Background="#FF9800" Foreground="White" BorderThickness="0"/>
                    <Button Content="⏹ Stop" Command="{Binding StopCommand}" Margin="5" Padding="10,5" Background="#F44336" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
