<Window x:Class="SecureVault.PropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Properties" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding FileName}" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Properties Grid -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" FontWeight="Bold" Margin="0,5"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding FileName}" Margin="10,5,0,5"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Type:" FontWeight="Bold" Margin="0,5"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding FileType}" Margin="10,5,0,5"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Size:" FontWeight="Bold" Margin="0,5"/>
            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding FileSize}" Margin="10,5,0,5"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Created:" FontWeight="Bold" Margin="0,5"/>
            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CreatedDate}" Margin="10,5,0,5"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Modified:" FontWeight="Bold" Margin="0,5"/>
            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ModifiedDate}" Margin="10,5,0,5"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Path:" FontWeight="Bold" Margin="0,5"/>
            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding FilePath}" Margin="10,5,0,5" TextWrapping="Wrap"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="OK" 
                    Style="{StaticResource ModernButton}"
                    Width="80" 
                    IsDefault="True" 
                    Click="OK_Click"/>
        </StackPanel>
    </Grid>
</Window>
